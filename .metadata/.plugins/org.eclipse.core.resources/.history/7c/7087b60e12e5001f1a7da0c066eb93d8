package com.aurionpro.test;

import com.aurionpro.model.Car;
import com.aurionpro.model.Vehicle;
import com.aurionpro.model.ElectricCar;

public class VehicleTest {

	public static void main(String[] args) {
		Vehicle vehicle = new Vehicle("Brand1", "Model1", 30.4);
		Car car = new Car();
		ElectricCar electriccar = new ElectricCar();
		
		System.out.println("Vehicle Object: ");
		vehicle.displayInfo();
		vehicle.accelerate(9.6);
		System.out.println("\nAfter Acceleration: ");
		vehicle.displayInfo();
		vehicle.brake(5);
		System.out.println("After Braking:");
		vehicle.displayInfo();
		
		System.out.println();
		
		System.out.println("Car Object: ");
		car.displayInfo();
		car.accelerate(9.6);
		System.out.println("\nAfter Acceleration: ");
		car.displayInfo();
		car.brake(5);
		System.out.println("After Braking:");
		car.displayInfo();
	}

}
